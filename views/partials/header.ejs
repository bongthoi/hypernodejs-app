<header>
	<nav class="navbar navbar-default menubar-color" role="navigation">
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand mautrang" href="/">
					Blockchain Glorious App
				</a>
				<ul class="nav navbar-nav canhphai">
					  <% if(user){ %>
						  <li><a class="mautrang" href="/">Home</a></li>
						  <li><a class="mautrang" href="/users/logout">Logout</a></li>
						<% } else{ %>  
							<li><a class="mautrang" href="/transactions">Transactions</a></li>
						 	<li><a class="mautrang" href="/users/register">Register</a></li>
							<li><a class="mautrang" href="/users/login">Login</a></li>
					   <% } %>
				</ul>
			</div>
		</div>
	</nav>
</header>
<div class="col-md-4 col-md-offset-4">
	<%if (success_message != '') { %>
		<div class="alert alert-success">
			<%= success_message %>
		</div>
	<% } %>
	<%if (error_message != '') { %>
		<div class="alert alert-danger">
			<%= error_message %>
		</div>
	<% } %>
	<%if (error != '') { %>
		<div class="alert alert-danger">
			<%= error %>
		</div>
	<% } %>
	
	<%if (errors != '') { %>
		<div class="alert alert-danger">
		<% for(var i=0; i < errors.length; i++) { %>	
			<ul>
				<li><%= errors[i].msg %></li>					
			</ul>
		<%}%>				
		</div>
	<% } %>
</div>
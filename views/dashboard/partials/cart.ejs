<div class="row">      
    <div class="col-xs-12">
        <div class="dropdown pull-right">
            <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                <i class="fa fa-shopping-cart" aria-hidden="true"></i> Cart
               <%if(session.cart.totalItems){%>
                <span>(<%= session.cart.totalItems %>)</span>
                <%}%>
            </a>
            <%if(session.cart.totalItems){%>
            <div class="dropdown-menu">
                <div class="cart">
                   <%for(var i=0;i<(session.cart.getItems()).length;i++){%>
                    <div class="row">
                        <div class="col-xs-4">
                            <%= (session.cart.getItems())[i].item.title%>
                        </div>
                        <div class="col-xs-4 text-right">
                            <span class="badge"><%= (session.cart.getItems())[i].quantity%></span>
                        </div>
                        <div class="col-xs-4 text-right">
                            <%= (session.cart.getItems())[i].subtotal%> GLO
                        </div>
                    </div>
                    <%}%>
                    <div class="row">
                        <div class="text-right">
                            <div class="totalPrice">Total: <%= session.cart.totalPrice %> GLO</div>
                            <a href="/private/viewcart" class="btn btn-success">View Cart</a>
                        </div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
    
</div>
